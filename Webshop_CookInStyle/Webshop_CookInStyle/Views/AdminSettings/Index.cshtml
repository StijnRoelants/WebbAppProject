@model Webshop_CookInStyle.ViewModels.IndexAdminSettingsVM

@{
    ViewData["Title"] = "Instellingen";
}
<div class="container card">
    <div class="row card-body">
        <h1>Instellingen</h1>
    </div>
    <div class="row card-body">
        <div class="col-md-6">
            <h4>Factuurnummering</h4>
            <p>Eerst volgende factuurnummer dat gebruikt zal worden</p>
            <br />
            <a asp-action="EditNummering" asp-route-id="@Model.Factuurfirma.FactuurfirmaID" class="btn btn-info">Edit</a>
            <hr />
            <dl class="row card-body">
                <dt class="col-md-6">
                    @Html.DisplayNameFor(model => model.Factuurfirma.Factuurnummering)
                </dt>
                <dd class="col-md-6">
                    @Html.DisplayFor(model => model.Factuurfirma.Factuurnummering)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <h4>Bestelbonnummering</h4>
            <p>Eerst volgende bestelbonnummer dat gebruikt zal worden</p>
            <br />
            <a asp-action="EditNummeringBestelbon" asp-route-id="@Model.Factuurfirma.FactuurfirmaID" class="btn btn-info">Edit</a>
            <hr />
            <dl class="row card-body">
                <dt class="col-md-6">
                    @Html.DisplayNameFor(model => model.Factuurfirma.Bestelbonnummering)
                </dt>
                <dd class="col-md-6">
                    @Html.DisplayFor(model => model.Factuurfirma.Bestelbonnummering)
                </dd>
            </dl>
        </div>
    </div>
    <div class="row card-body">
        <div class="col-lg-12">
        <h4>Factuurfirma</h4>
        <p>Volgende gegevens worden gebruikt om uw facturen te genereren</p>
        <br />
        <a asp-action="EditGegevens" asp-route-id="@Model.Factuurfirma.FactuurfirmaID" class="btn btn-info">Edit</a>
        <hr />
        <dl class="row card-body">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Factuurfirma.Naam)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Factuurfirma.Naam)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Factuurfirma.Straat)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Factuurfirma.Straat)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Factuurfirma.Postcode.Nummer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Factuurfirma.Postcode.Nummer)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Factuurfirma.Postcode.Gemeente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Factuurfirma.Postcode.Gemeente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Factuurfirma.BtwNummer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Factuurfirma.BtwNummer)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Factuurfirma.Banknaam)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Factuurfirma.Banknaam)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Factuurfirma.Iban)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Factuurfirma.Iban)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Factuurfirma.Bic)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Factuurfirma.Bic)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Factuurfirma.Telefoon)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Factuurfirma.Telefoon)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Factuurfirma.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Factuurfirma.Email)
            </dd>
        </dl>
        <hr />
            </div>
    </div>
</div>

