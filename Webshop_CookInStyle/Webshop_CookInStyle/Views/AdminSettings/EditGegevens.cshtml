@model Webshop_CookInStyle.ViewModels.IndexAdminSettingsVM

@{
    ViewData["Title"] = "Bedrijfsgegevens";
}
<div class="container">
    <h1>Bedrijfsgegevens aanpassen</h1>
    <br />
    <hr />
    @if (ViewBag.Visibility == true)
    {
        <div class="alert alert-danger">
            <p>@ViewBag.ErrorMessage</p>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditGegevens">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Factuurfirma.FactuurfirmaID" />
                <div class="form-group">
                    <label asp-for="Factuurfirma.Naam" class="control-label"></label>
                    <input asp-for="Factuurfirma.Naam" class="form-control" />
                    <span asp-validation-for="Factuurfirma.Naam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Factuurfirma.Straat" class="control-label"></label>
                    <input asp-for="Factuurfirma.Straat" class="form-control" />
                    <span asp-validation-for="Factuurfirma.Straat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Factuurfirma.PostcodeID" class="control-label">Postcode</label>
                    <select asp-for="Factuurfirma.PostcodeID" class="form-control" asp-items="Model.PostcodeList"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Factuurfirma.LandID" class="control-label">Land</label>
                    <select asp-for="Factuurfirma.LandID" class="form-control" asp-items="Model.LandList"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Factuurfirma.BtwNummer" class="control-label"></label>
                    <input asp-for="Factuurfirma.BtwNummer" class="form-control" />
                    <span asp-validation-for="Factuurfirma.BtwNummer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Factuurfirma.Banknaam" class="control-label"></label>
                    <input asp-for="Factuurfirma.Banknaam" class="form-control" />
                    <span asp-validation-for="Factuurfirma.Banknaam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Factuurfirma.Iban" class="control-label"></label>
                    <input asp-for="Factuurfirma.Iban" class="form-control" />
                    <span asp-validation-for="Factuurfirma.Iban" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Factuurfirma.Bic" class="control-label"></label>
                    <input asp-for="Factuurfirma.Bic" class="form-control" />
                    <span asp-validation-for="Factuurfirma.Bic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Factuurfirma.Telefoon" class="control-label"></label>
                    <input asp-for="Factuurfirma.Telefoon" class="form-control" />
                    <span asp-validation-for="Factuurfirma.Telefoon" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Factuurfirma.Email" class="control-label"></label>
                    <input asp-for="Factuurfirma.Email" class="form-control" />
                    <span asp-validation-for="Factuurfirma.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Opslaan" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Terug</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
