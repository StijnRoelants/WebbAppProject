@model Webshop_CookInStyle.ViewModels.AddAllergeenVM

@{
    ViewData["Title"] = "Delete Confirm";
}

<div class="container card">
    <div class="row card-body">
        <h1>Verwijderen</h1>
    </div>
    <div class="row card-body">
        <h3>Bent u zeker dat u het volgende allergeen wenst te verwijderen</h3>
    </div>
    <div class="row card-body">
        <hr />
        <dl class="row card-body">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Allergeen.Omschrijving)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Allergeen.Omschrijving)
            </dd>
        </dl>
    </div>
    <div class="row card-body">
        <form asp-action="DeleteAllergeen">
            <input type="hidden" asp-for="Allergeen.AllergeenID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a asp-action="Index" class="btn btn-primary">Terug</a>
        </form>
    </div>
</div> 


