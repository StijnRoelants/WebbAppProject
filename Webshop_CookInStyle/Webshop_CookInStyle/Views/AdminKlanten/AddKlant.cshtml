@model Webshop_CookInStyle.ViewModels.AddKlantVM

@{
    ViewData["Title"] = "Nieuwe Klant";
}

<div class="container card">
    <div class="row card-body">
        <h1>Klant toevoegen</h1>
    </div>
    <div class="row card-body">
        <div class="col-sm-8">
            <br />
            @if (ViewBag.Visibility == true)
            {
                <div class="alert alert-danger">
                    <p>@ViewBag.ErrorMessage</p>
                </div>
            }

            <br />
            <form asp-action="AddKlant">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Klant.Voornaam" class="control-label"></label>
                    <input asp-for="Klant.Voornaam" class="form-control" />
                    <span asp-validation-for="Klant.Voornaam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Klant.Achternaam" class="control-label"></label>
                    <input asp-for="Klant.Achternaam" class="form-control" />
                    <span asp-validation-for="Klant.Achternaam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Klant.StraatEnNummer" class="control-label"></label>
                    <input asp-for="Klant.StraatEnNummer" class="form-control" />
                    <span asp-validation-for="Klant.StraatEnNummer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Klant.PostcodeID" class="control-label">Postcode en gemeente</label>
                    <select asp-for="Klant.PostcodeID" class="form-control" asp-items="Model.Postcodes"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Klant.LandID" class="control-label"></label>
                    <select asp-for="Klant.LandID" class="form-control" asp-items="Model.Landen"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Klant.Email" class="control-label"></label>
                    <input asp-for="Klant.Email" class="form-control" />
                    <span asp-validation-for="Klant.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Klant.Telefoon" class="control-label"></label>
                    <input asp-for="Klant.Telefoon" class="form-control" />
                    <span asp-validation-for="Klant.Telefoon" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Klant.Mobiel" class="control-label"></label>
                    <input asp-for="Klant.Mobiel" class="form-control" />
                    <span asp-validation-for="Klant.Mobiel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Klant.Naam" class="control-label">Firmanaam</label>
                    <input asp-for="Klant.Naam" class="form-control" />
                    <span asp-validation-for="Klant.Naam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Klant.BtwNummer" class="control-label"></label>
                    <input asp-for="Klant.BtwNummer" class="form-control" />
                    <span asp-validation-for="Klant.BtwNummer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Toevoegen" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="row card-body">
        <a asp-action="Index" class="btn btn-primary">Terug</a>
    </div>
</div>